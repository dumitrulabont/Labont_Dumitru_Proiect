@page
@model Labont_Dumitru_Proiect.Pages.Catalog_Online.CreateModel
@using Models; @*trebuie inclusa clasa Models pt a putea popula select-ul *@
@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Student</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Student.Nume" class="control-label"></label>
                <input asp-for="Student.Nume" class="form-control" />
                <span asp-validation-for="Student.Nume" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Student.Prenume" class="control-label"></label>
                <input asp-for="Student.Prenume" class="form-control" />
                <span asp-validation-for="Student.Prenume" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Student.DataNasterii" class="control-label"></label>
                <input asp-for="Student.DataNasterii" class="form-control" />
                <span asp-validation-for="Student.DataNasterii" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Student.TipScolarizare" class="control-label"></label>
                <!-- Am adaugat tag healper-ul asp-items pt a popula lista select-->
                <select asp-for="Student.TipScolarizare" asp-items="Html.GetEnumSelectList<TipScolarizare>()" class="form-control"></select>
                <span asp-validation-for="Student.TipScolarizare" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
